{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Founder",
  "version": "0.1.0",
  "identifier": "com.founder.desktop",
  "build": {
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Founder - Productivity Suite",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "dmg",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}